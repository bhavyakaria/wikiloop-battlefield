{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "dom"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        // "strict": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./*"
            ]
        },
        "types": [
            "@types/node",
            "@nuxt/types",
            "@nuxt/vue-app",
            "@nuxtjs/axios",
            "@dicebear/avatars/typings/svgson"
        ],
        "experimentalDecorators": true /* Enables experimental support for ES7 decorators. */,

        /* Enables experimental support for emitting type metadata for decorators.
           Required by nuxt-property-decorator using Enum
         */
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./**/*.ts",
        "./**/*.vue"
    ],
    "files": [
        "vue-shim.d.ts"
    ]
}
